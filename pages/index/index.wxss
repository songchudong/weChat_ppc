

.list_block {
  position: relative;
  margin: 15rpx 20rpx;
  border-radius: 8rpx;
}

.tips_block{
  background: #fff;
  font-size: 32rpx;
  display: flex;
  justify-content:space-between;
  align-items:center;
  height: 80rpx;
  line-height: 80rpx;
  padding: 20rpx;
}
.tips_block text{
  color: #353535;
}
.tips_block button{
  font-size: 30rpx;
  color: #fff;
  background-color: #ff0036;
  border-radius: 35rpx;
  height: 60rpx;
  line-height: 60rpx;
  position: inherit;
  margin-right: 5rpx;
}


.codeView{
  position: fixed;
  width: 75%;
  left: 50%;
  top:50%;
  margin-left:-37.5%;
  margin-top:-37.5%; 
  z-index: 9998;
  background: #fff;
  border-radius: 5rpx;
  transition: all 500ms;
  border:1rpx solid #ececec;
}
.codeView .tips_code image{
  width: 100%;
  margin: 0 auto;
  text-align: center;
}
.codeView .tips_code text{
  font-size: 32rpx;
  display: block;
  margin-bottom:30rpx;
  text-align: center;
  color: #ff0036;
}
.codeView .tips_title{
  text-align: center;
  margin-top: 35rpx;
}


.codeView .tips_close{
  position: absolute;
  top: -25rpx;
  right: -25rpx;
  height: 65rpx;
  width: 65rpx;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #fff;
  box-shadow: 0 0 2rpx 4rpx #ececec;
}
.codeView .tips_close icon{
  color: #ff0036;
}
.codeMask{
  width: 100%;
  height: 100%;
  /* overflow: hidden; */
  position: fixed;
  top: 0;
  left: 0;
  z-index: 9997;
  background-color: rgba(205, 205, 205, .2);

}



.list_header image{
  width: 100%;
  display: block;
  border-radius: 8rpx;
}

.list_conter{
  widows: 100%;
  height: 0;
  position: relative;
  background-color: #ececec;
}

.position_box{
  width: 100%;
  height: 160rpx;
  position: absolute;
  bottom: 0;
  background-color: #fff;
  padding: 25rpx;
  box-sizing: border-box;
  border-bottom-left-radius: 8rpx;
  border-bottom-right-radius: 8rpx;
}

.content_title {
  font-size: 30rpx;
  padding-bottom: 8rpx;
  height: 40rpx;
  line-height: 40rpx;
}

.box_discount{
  font-size: 28rpx;
  margin-right: 15rpx;
  background-color: #ff0036;
  padding: 5rpx 8rpx;
  border-radius: 10rpx;
  color: #fff;
}
.box_title{
  color:#353535;
  font-size: 38rpx;
  vertical-align: middle;
}

.content_text {
  font-size: 26rpx;
  color: #a0a0a0;
  display: flex;
  justify-content: space-between;
}

.content_box_right {
  padding-right: 20rpx;
  text-align: center;
}

.content_text_right view:nth-child(1) {
  font-size: 35rpx;
  padding: 25rpx 0 15rpx 0;
  color: #ff0036;
} 
.conter_msg{
  color: #888888;
  font-size: 28rpx;
}


.position_box{
  display: flex;
}
.content_box_right{
  justify-content: flex-end;
  position: absolute;
  right: 0;
}
.content_box_right text{
  display: block;
  color: #888888;
}

.content_box_right .box_price{
  font-size: 38rpx;
  color: #ff0036;
}

.content_box_right .box_index{
  margin-top: 8rpx;
  font-size: 28rpx;
  text-align: right;
}
