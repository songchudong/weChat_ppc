/* pages/user.wxss */

/* 用户头部信息 */

.head_box{
  height: 260rpx;
  width: 100%;
  background-color: #ff0036;
}

.head_user_info{
  width: 200rpx;
  height: 200rpx;
  padding: 25rpx 0;
  margin: 0 auto;
}
.head_user_info .user_icon{
  width: 200rpx;
  padding: 0 38rpx;
  box-sizing: border-box;
}
.head_user_info .user_icon image{
    border-radius: 50%;
    height: 125rpx;
    width: 125rpx;
}
.head_user_info .user_name{
  text-align: center;
  font-size: 32rpx;
  color: #fff;
  margin-top: 10rpx;
} 
.order_list_box .order_item{
  margin-bottom: 15rpx;
  background: #fff;
  padding: 15rpx;
}

.order_list_box .box_icon{
  width: 175rpx;
  height: 175rpx;
  border-radius: 4rpx;
}
.order_list_box .order_item{
  display: flex;
  height: 175rpx;
}


.order_item .box_left{
  height: 175rpx;
  widows: 175rpx;
  display: flex; 
  justify-content:flex-start; 
  
}
.order_item .box_right{
  display: flex;
}
.order_item .state_info{
  margin-left: 40rpx;
  padding-top: 15rpx;
}


.order_item .state_info view:nth-child(1){
  font-size: 30rpx;
  color: #ff0036;
  margin-top: 35rpx;
}
.order_item .state_info view:nth-child(2){
  font-size: 25rpx;
  text-align: center;
  color: #888;
  margin-top: 10rpx;
}


/* 选项卡 */


.btn-group {
  display: flex;
  justify-content: space-between;
  height: 80rpx;
  line-height: 80rpx;
  width: 100%;
  background-color: #fff;
  border-bottom: 1rpx solid #f7f6fb;
}

.btn-group .btn-list {
  width: 25%;
  text-align: center;
  line-height: 78rpx;
  height: 78rpx;
  font-size: 28rpx;
}

.btn-group .item {
  color: #ff0036;
  border-bottom: 2rpx solid #ff0036;
}

.box-list {
  background-color: #fff;
  padding: 3%;
  margin-bottom: 40rpx;
}