/* pages/goods/details.wxss */

.goods_connect {
  font-size: 28rpx;
  color: #a0a0a0;
  display: flex;
  justify-content: space-between;
}

.goods_connect .goods_connect_right {
  padding-right: 25rpx;
}

.goods_connect .goods_connect_right view:nth-child(1) {
  font-size: 40rpx;
  margin-bottom: 5rpx;
  color: #ff0036;
}

.goods_connect .goods_connect_right view:nth-child(2) {
  margin-left: 20rpx;
  text-align: right;
}

/* 产品描述 */

.product_box {
  font-size: 35rpx;
  padding: 20rpx;
  background-color: #fff;
}

.product_box .product_title {
  display: flex;
  justify-content: space-between;
  margin-bottom: 15rpx;
}

.product_box .box_discount {
  font-size: 30rpx;
  margin: auto 10rpx auto 0;
  color: #fff;
  padding: 5rpx 10rpx;
  border-radius: 10rpx;
  background-color: #ff0036;
}

.product_box .box_left {
  display: flex;
}

.product_box .box_right {
  display: flex;
}

.product_connect {
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  color: #a0a0a0;
}

.product_connect .box_left {
  display: flex;
  flex-direction: column;
}

.product_connect .box_left .box_ps {
  height: 50rpx;
  line-height: 50rpx;
}

.product_box .box_gross {
  text-align: right;
  padding-right: 5rpx;
}

.product_box .box_name {
  color: #353535;
  font-size: 36rpx;
  vertical-align: middle;
}

.product_box .box_share {
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  line-height: 45rpx;
  height: 45rpx;
  color: #888;
  padding-left: 5rpx;
}

.product_box .box_share image {
  height: 30rpx;
  width: 30rpx;
  margin-right: 5rpx;
}

.product_box .box_price {
  font-size: 40rpx;
  margin-bottom: 5rpx;
  color: #ff0036;
}

/* 底部悬浮框 */

.suspend_view {
  background-color: #fff;
  height: 120rpx;
  box-shadow: 0 0 2rpx 4rpx #ececec;
  position: fixed;
  bottom: 0rpx;
  width: 100%;
  display: flex;
  justify-content: space-between;
}

.suspend_view navigator:nth-child(1) {
  height: 80rpx;
  font-size: 30rpx;
  color: #a0a0a0;
  line-height: 80rpx;
  margin-top: 20rpx;
  margin-left: 5%;
}

.suspend_view navigator:nth-child(2) {
  width: 75%;
  height: 80rpx;
  margin-right: 5%;
  line-height: 80rpx;
  text-align: center;
  margin-top: 20rpx;
  border-radius: 40rpx;
  background-color: #ff0036;
  color: #fff;
}

.content_view {
  margin: 25rpx 0 15rpx 0;
  background-color: #fff;
  padding: 15rpx 25rpx;
  font-size: 28rpx;
  padding-top: 25rpx;
  padding-bottom: 25rpx;
}

.drawer_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 1000;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
}
.drawer_base64 icon{
  position: fixed;
  top: 50rpx;
  right: 50rpx;
  color: #FFF;
}
.drawer_base64{
  width:65%;
  height: 500rpx;
  position: fixed;
  z-index: 9999;
  top: 50rpx;
  left: 50%;
  margin-left: -250rpx;
}

/*content*/
.animated {
  animation-duration: 500ms;
  animation-fill-mode: both;
}

@keyframes slideInUp {
  0% {
    transform: translate3d(0, 100%, 0);
    visibility: visible;
  }

  to {
    transform: translateZ(0);
  }
}

.slideInUp {
  animation-name: slideInUp;
}

.drawer_box {
  background: #fff;
  height: 170rpx;
  width: 100%;
  position: fixed;
  z-index: 1001;
  left: 50%;
  bottom: 0;
  margin-left: -50%;
  margin-top: -250rpx;
  padding: 20rpx 0;
}

.drawer_content {
  display: flex;
  justify-content: center;
  text-align: center;
  /* box-sizing: border-box; */
}

.drawer_content .drawer_block {
  display: flex;
  width: 250rpx;
  height: 160rpx;
}

.drawer_block button{
  /* position: absolute; */
  display: flex;
  flex-direction: column;
  margin: 0; 
  box-sizing: initial; 
  font-size: normal;
  text-align: center;
  text-decoration: none;
  line-height: normal;
  border-radius: 0px;
  color: #888;
  background-color: #fff; 
  padding-right: 25rpx;
  padding-left: 0;
}
button::after{
  border: none;
}
.drawer_block {
  display: flex;
  flex-direction: column;
  text-align: center;
  margin: 0 25rpx;
}
.drawer_block:nth-child(1){
  border-right: 1px solid #ececec;
  margin-right: 0;
}

.drawer_block image {
  width: 120rpx;
  height: 120rpx;
  margin: 0 auto;
}

.drawer_block .drawer_block_icon {
  width: 110rpx;
  height: 110rpx;
  margin: 5rpx auto;
}

.drawer_block text {
  font-size: 30rpx;
  margin-top: 5rpx;
  color: #888;
}

.swiper image {
  width: 100%;
}


.banner{ width: 100%; height: auto; display: block;}  
.slide-image{ width: 100%; display: block;} 