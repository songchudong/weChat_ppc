/* pages/goods/details.wxss */

.goods {
  font-size: 35rpx;
  padding: 0 0 15rpx 25rpx;
  background-color: #fff;
}

.goods_title {
  display: flex;
  flex-direction: row;
}

.goods_title button::after {
  border: none;
}

.goods_title view:nth-child(1) {
  font-size: 30rpx;
  margin: auto 10rpx auto 0;
  color: #fff;
  padding: 5rpx 10rpx;
  border-radius: 10rpx;
  background-color: #ff0036;
}

.goods_title view:nth-child(2) {
  margin: auto 0;
  width: 60%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.goods_title view:nth-child(3) {
  margin: auto 0 auto auto;
}

.goods_connect {
  font-size: 28rpx;
  color: #a0a0a0;
  display: flex;
  justify-content: space-between;
}

.goods_connect .goods_connect_right {
  padding-right: 25rpx;
}

.goods_connect .goods_connect_right view:nth-child(1) {
  font-size: 40rpx;
  padding: 10rpx;
  color: #ff0036;
}

.goods_connect .goods_connect_right view:nth-child(2) {
  margin-left: 20rpx;
}

/* 底部悬浮框 */

.suspend_view {
  background-color: #fff;
  height: 120rpx;
  border: 1px solid #e0e0e0;
  border-radius: 20rpx;
  position: fixed;
  bottom: 30rpx;
  width: 96%;
  margin-left: 2%;
  display: flex;
  justify-content: space-between;
}

.suspend_view navigator:nth-child(1) {
  height: 80rpx;
  font-size: 30rpx;
  color: #a0a0a0;
  line-height: 80rpx;
  margin-top: 20rpx;
  margin-left: 5%;
}

.suspend_view navigator:nth-child(2) {
  width: 75%;
  height: 80rpx;
  margin-right: 5%;
  line-height: 80rpx;
  text-align: center;
  margin-top: 20rpx;
  border-radius: 40rpx;
  background-color: #ff0036;
  color: #fff;
}

.content_view {
  margin: 25rpx 0 15rpx 0;
  background-color: #fff;
  padding: 15rpx 25rpx;
  font-size: 28rpx;
  padding-top: 25rpx;
  padding-bottom: 25rpx;
}

.drawer_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1000;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
}

/*content*/

.drawer_box {
  width: 100%;
  overflow: hidden;
  position: fixed;
  bottom: 0rpx;
  z-index: 1001;
  background: #fafafa;
  border-radius: 5px;
}

.drawer_img {
  width: 80%;
  margin-left: 10%;
  overflow: hidden;
  position: fixed;
  bottom: 25%;
  z-index: 1001;
  border-radius: 5px;
}

.drawer_content {
  display: flex;
  justify-content: space-between;
  text-align: center;
  height: 150rpx;
  line-height: 150rpx;
}

.drawer_content button {
  line-height: 150rpx;
  width: 100%;
}

.swiper image {
  width: 100%;
}